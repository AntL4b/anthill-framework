{
  "name": "@antl4b/anthill-framework",
  "version": "0.0.1",
  "description": "A fast, reliable dependence less framework for building serverless backend applications",
  "author": "AntL4b <ant1.antlab@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AntL4b/anthill-framework.git"
  },
  "keywords": [
    "Anthill",
    "Framework",
    "AWS",
    "Lambda",
    "Api Gateway",
    "Serverless",
    "Microservices"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist/",
    "release": "npm run build && dotenv release-it --",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "dotenv-cli": "^7.2.1",
    "husky": "^8.0.3",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "release-it": "^15.11.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "typescript": "5.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!(*.d).{ts,tsx}": [
      "prettier --write",
      "import-sort --write"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "importSort": {
    ".tsx?": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "release-it": {
    "github": {
      "release": true
    }
  },
  "bugs": {
    "url": "https://github.com/AntL4b/anthill-framework/issues"
  },
  "homepage": "https://github.com/AntL4b/anthill-framework#readme"
}
