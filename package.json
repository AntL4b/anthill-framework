{
  "name": "@antl4b/anthill-framework",
  "version": "1.0.1",
  "description": "A fast, reliable dependence less framework for building serverless backend applications",
  "author": "AntL4b <ant1.antlab@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AntL4b/anthill-framework.git"
  },
  "keywords": [
    "Anthill",
    "Framework",
    "AWS",
    "Lambda",
    "Api Gateway",
    "Serverless",
    "Microservices"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "npm run clean && tsc -p ./tsconfig-build.json",
    "clean": "rimraf dist/",
    "release": "npx release-it",
    "test": "cross-env TS_NODE_PROJECT=tsconfig.jest.json jest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "release-it": "^19.2.3",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!(*.d).{ts,tsx}": [
      "prettier --write",
      "import-sort --write"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "importSort": {
    ".tsx?": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "release-it": {
    "github": {
      "release": true
    }
  },
  "bugs": {
    "url": "https://github.com/AntL4b/anthill-framework/issues"
  },
  "homepage": "https://github.com/AntL4b/anthill-framework#readme"
}
